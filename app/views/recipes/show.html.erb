<p id="notice"><%= notice %></p>

<p>
  <b>Recipe</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Source</b>
  <% unless @recipe.url.empty? %>
    <%= link_to @recipe.source, @recipe.url %>
  <% else %>
    <%= @recipe.source %>
  <% end %>
</p>

<p>
  <b>Ingredients:</b>
  <% @ingredients.each do |ingredient| %>
    <br />
    <%= ingredient.name %>  <%= link_to "[-]", ingredient, :confirm => "Are you sure?", :method => :delete %>
  <% end %>
  <br />
  <%= link_to "[+]", new_ingredient_path(:recipe_id => @recipe.id) %>
</p>

<p>
  <b>Instructions:</b>
  <%= @recipe.instructions %>
</p>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
